<!--pages/movieDetail/movieDetail.wxml-->
<view class="movieDetailContainer">
<image  class="movies_img" src='{{movieDetail.images.large}}'></image>
<text class="movies_name">{{movieDetail.original_title}}</text>
<view class='movies_detail'>
<text>评分：{{movieDetail.rating.average}}</text>
<text>导演：{{movieDetail.directors[0].name}}</text>
<text>主演：{{movieDetail.casts[1].name}} {{movieDetail.casts[2].name}} {{movieDetail.casts[3].name}}</text>
</view>
<button>观影</button>
</view>
